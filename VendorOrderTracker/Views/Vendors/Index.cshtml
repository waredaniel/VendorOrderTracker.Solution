@{
  Layout = "_Layout";
}

@using VendorOrderTracker.Models;

<h1>Your Vendors:</h1>

@if (@Model.Count == 0)
{
  <h3>(Entered vendors will appear here)</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3>Name: <a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
  <h4>Vendor Info: @vendor.VendorInfo</h4>
}

<p><a href='/'>Back home</a></p>